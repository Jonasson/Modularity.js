html { background: #aabbcc; }

body { font-family: georgia, serif; }

h1 { font-size: 32px; line-height: 1.4em; margin-bottom: 1em; }
h2 { font-size: 23px; line-height: 1.4em; }
h3 { font-size: 17px; line-height: 1.4em; }
p { line-height: 1.5em; margin-bottom: 1.5em; }

#page {
  display: table; width: 100%; height: 100%; position: absolute;
}

header { height: 75px; }
header h1 { line-height: 55px; padding: 10px; margin-left: 20px; }

nav {
  position: absolute;
  top: 75px;
  width: 200px;
  background: rgba(0, 0, 0, 0.65);
  color: white;
}
nav a {
  color: white; text-decoration: none;
  text-shadow: 2px 2px 3px black;
}
nav ul { padding: 10px 10px 30px; margin-left: 20px; }
nav h1 {
  font-size: 12px;
  padding: 10px 10px 0;
  margin: 0; margin-left: 20px;
}

#content {
  position: absolute;
  top: 75px;
  left: 210px;
  width: 700px;
}

#content > article {
  padding: 30px 30px 45px;
  opacity: 0;
  min-height: 300px;
  background: white;
  box-shadow: 3px 3px 5px 2px rgba(0, 0, 0, 0.15);
}

footer {
  width: 100%;
  line-height: 2em;
  position: fixed; bottom: 0;
  background: rgba(0, 0, 0, 0.75);
  color: white;
}

footer p { padding: 10px; margin: 0; }

